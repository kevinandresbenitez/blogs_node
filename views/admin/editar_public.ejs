        <title>Cuenta</title>
    </head>

    <body>

        <%- include("../partials/header.ejs")%>


        <article id="articulo">

          <%- include("../partials/header_interno.ejs") %>


            </div>


            <div id="formulario_agregar">
                <form action="/procesar_editar" method="POST">

                        <input type="hidden" name="id" value="<%= publicacion_id %>">

                        <label for="titulo">Titulo</label><p></p>
                        <input type="text" placeholder="Titulo..." name="titulo" required value="<%=datos.titulo%>"><p></p>

