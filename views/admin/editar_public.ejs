                        <input type="text" name="resumen" id="resumen" required value="<%=datos.resumen%>"><p></p>


                        <label for="contenido">Contenido</label><p></p>
                        <div id="contenedor_contenido"><textarea name="contenido" id="contenido"  cols="30" rows="10" ><%=datos.contenido%></textarea><p></p></div>


                        <input type="submit" name="agreagar" id="agregar_publicacion" value="Agregar">


                </form>
            </div>




        </article>





        <%- include("../partials/footer.ejs")%>

    </body>
